<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>  
</p>

<p>
  <strong>Published at:</strong>
  <%= @post.published_at %>  
</p>

<p>
  <strong>Body:</strong>
  <%= markdown(@post.body) %>
</p>

<h3>Tags</h3>
<%= @post.all_tags %>

<h3>Comments</h3>
<%= render @post.comments %>
<%= render "personal_blog/comments/form" %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
