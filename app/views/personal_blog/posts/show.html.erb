<p id="notice"><%= notice %></p>

<h1>  <%= @post.title %>  </h1>
<p>  <%= @post.published_at.strftime('%B %e, %Y') %>  </p>

<p>
  <%= markdown(@post.body) %>
</p>

<br>
<hr class="body-end">

<% @post.tags.each do |tag| %>
  <span class="tag"><%= tag.name %></span>
<% end %>

<h4> Comments </h4>
<%= render @post.comments %>
<%= render "personal_blog/comments/form" %>

<% if admin? %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% end %>
